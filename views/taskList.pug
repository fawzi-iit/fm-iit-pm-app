extends layout

block content
    h1 Task List
    ul
        each task in tasks
            li
                | Task: #{task.name} - Priority: #{task.priority} - Progress: #{task.progress}%
                if task.assignee
                    | - Assignee: #{task.assignee.name}
                else
                    | - Assignee: Not Assigned
                // Delete button
                button(onclick="confirmDelete(#{task.id})") X
form(method="POST" action="/tasks/update-task")
    select(name="status")
        option(value="Not Started") Not Started
        option(value="In Progress") In Progress
        option(value="Completed") Completed
    input(type="number" name="progress" min="0" max="100")
    select(name="priority")
        option(value="High") High
        option(value="Medium") Medium
        option(value="Low") Low
    input(type="submit" value="Update Task")
